student_height = input("Input a list of student heights: ").split()

# Convert input list of heights to integers, removing commas if present
for n in range(len(student_height)):
    student_height[n] = int(student_height[n].replace(",", ""))  # Remove commas

# Calculate total height
total_height = sum(student_height)

# Calculate average height
average_height = round(total_height / len(student_height))

print(f"Average height = {average_height}")
